{
    "name": "ecs-tag-shift",
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".."
    },
    "workspaceFolder": "/workspace",
    "customizations": {
        "vscode": {
            "extensions": [
                "golang.Go",
                "GitHub.copilot"
            ]
        }
    },
    "mounts": [
        "source=${localWorkspaceFolder}/,target=/workspace,type=bind",
        "source=${env:HOME}/.claude,target=/root/.claude,type=bind"
    ],
    "remoteUser": "root"
}
